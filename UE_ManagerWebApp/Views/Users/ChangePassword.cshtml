@model UE_ManagerWebApp.Models.ConfirmPassword

@{
    ViewData["Title"] = "Cambiar Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cambiar Contraseña</h1>

<h4>@User.Identity.Name</h4>
<hr />

<div class="row">
    <strong>@ViewBag.MessageConfirmation</strong>
    <br />
    <form asp-action="ChangePassword">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label">Nueva contraseña</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Confirmar contraseña</label>
            <input asp-for="CheckPassword" type="password" class="form-control" />
            <span asp-validation-for="CheckPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Cambiar Contraseña" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

